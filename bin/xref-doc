#!/bin/sh

##
## bin/xref-doc
##
## This is a wrapper shell script to run xref-doc from command line
##
## @author Igor Gariev <gariev@hotmail.com>
## @copyright Copyright (c) 2013 Igor Gariev
## @licence http://www.apache.org/licenses/LICENSE-2.0 Apache License, Version 2.0
##

for dir in '@php_dir@/XRef/bin-scripts' $(dirname $0)/../bin-scripts $(dirname $0)/../vendor/gariev/xref/bin-scripts
do
    if [ -d "$dir" ]; then
        SCRIPTDIR="$dir"
        break
    fi
done

if [ "@php_bin@" == @"php_bin@" ]; then
	PHP=php
else
	PHP="@php_bin@"
fi

if [ "$XREF_MEMORY_LIMIT" == "" ]; then
	XREF_MEMORY_LIMIT=1G
fi

$PHP -d memory_limit=$XREF_MEMORY_LIMIT  $SCRIPTDIR/xref-doc.php $@
