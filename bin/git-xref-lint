#!/bin/sh

##
## bin/git-xref-lint 
##
## This is a plugin for git that runs xref-lint for all modified PHP files
## 
## Usage: git xref-lint [--cached]
##
## @author Igor Gariev <gariev@hotmail.com>
## @copyright Copyright (c) 2013 Igor Gariev
## @licence http://www.apache.org/licenses/LICENSE-2.0 Apache License, Version 2.0
##

if [ "@php_dir@" == @"php_dir@" ]; then 
	SCRIPTDIR=$(dirname $0)/../bin-scripts
else
	SCRIPTDIR="@php_dir@/XRef/bin-scripts"
fi

if [ "@php_bin@" == @"php_bin@" ]; then 
	PHP=php
else
	PHP="@php_bin@"
fi


GIT_OPTIONS=""
XREF_OPTIONS=""

for i; do
    case "$i" in 
        --cached|--staged )
            GIT_OPTIONS=" --cached $GIT_OPTIONS"
            shift ;;
        *)
            XREF_OPTIONS=" $i $XREF_OPTIONS"
            shift ;;
    esac
done

FILES=$(git diff-index $GIT_OPTIONS HEAD --name-only)

echo $FILES

$PHP $SCRIPTDIR/xref-lint.php $XREF_OPTIONS $FILES

